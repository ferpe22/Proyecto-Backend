<section class="container">
    <h2>HOME</h2>
    <p> </p>
    <div class="table-responsive">
        <table class="table table-bordered table-md justify-middle">
        <thead class="table-ligth">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Titulo</th>
                <th class="text-center">DescripcioÃÅn</th>
                <th class="text-center">Codigo</th>
                <th class="text-center">Categoria</th>
                <th class="text-center">Stock</th>
                <th class="text-center">Precio</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td class="text-center">{{this._id}}</td>
                <td class="text-center">{{this.title}}</td>
                <td class="text-center">{{this.description}}</td>
                <td class="text-center">{{this.code}}</td>
                <td class="text-center">{{this.category}}</td>
                <td class="text-center">{{this.stock}}</td>
                <td class="text-center">{{this.price}}</td> 
            </tr>
            {{/each}}
        </tbody>
        </table>
        <div class="container">
            {{#if productsDB.hasPrevPage}}
            <a href="{{generatePaginationLink productsDB.prevPage}}">Pagina anterior</a>
            {{/if}}
            <p>Pagina {{productsDB.page}} de {{productsDB.totalPages}}</p>
            {{#if productsDB.hasNextPage}}
            <a href="{{generatePaginationLink productsDB.nextPage}}">Pagina siguiente</a>
            {{/if}}
        </div>
    </div>
</section>


<script src="/socket.io/socket.io.js"></script>
